<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linear_layout_checkbox"
    android:focusableInTouchMode="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/cb_check_box_rv"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_checkbox_rv"
        android:textSize="17sp"
        android:backgroundTint="@color/colorTextTitle"
        android:textColor="@color/colorTextContent"
        android:inputType="textCapSentences|textMultiLine|textNoSuggestions"
        android:imeOptions="actionDone"
        android:layout_weight="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_delete_check"
        android:layout_gravity="center"
        android:background="@drawable/ic_close_menu" />

</LinearLayout>